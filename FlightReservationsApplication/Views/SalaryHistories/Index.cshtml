@model IEnumerable<FlightReservationsApplication.Models.SalaryHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PreviousSalaryHistoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectiveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextSalaryHistory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PreviousSalaryHistoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextSalaryHistory.SalaryHistoryID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalaryHistoryID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalaryHistoryID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalaryHistoryID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
