
@{
    ViewData["Title"] = ViewBag.ErrorCode;
}
<div class="flex min-h-full flex-col bg-white ">
    <main class="mx-auto flex w-full max-w-7xl flex-grow flex-col justify-center px-6 lg:px-8">
        <div class="flex flex-shrink-0 justify-center">
            <a href="/" class="inline-flex">
                <span class="sr-only">Flight Reservations</span>
                <img class="h-16 w-auto" src="/lib/pictures/Icon.png" alt="">
            </a>
        </div>
        <div class="py-16">
            <div class="text-center">
                <p class="text-base font-semibold text-indigo-600">@ViewBag.ErrorCode</p>
                <h1 class="mt-2 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">@ViewBag.ErrorMessage</h1>
                <p class="mt-2 text-base text-gray-500">@ViewBag.ErrorContent</p>
                <div class="mt-6">
                    <a asp-controller="Home" asp-action="Index" class="text-base d-flex justify-center gap-2 align-items-center font-medium text-indigo-600 hover:text-indigo-500">
                        Intoarce-ma acasa <heroicon name="ArrowLongRight" kind="Solid" class="w-4 h-4"/>
                    </a>
                </div>
            </div>
        </div>
    </main>
</div>
<script type="text/javascript">
    var elements = document.getElementsByTagName("header");
    elements[0].remove();
</script>